<Window x:Class="Snake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake"
        mc:Ignorable="d"
        KeyDown="Keydown"
        Title="Snake" Height="500" Width="500" ResizeMode="NoResize" Foreground="Black">
    <Canvas Background="#FF2E2E2E"  >
        <Rectangle x:Name="snake" Width="15" Height="15" Fill="White" Canvas.Left="250" Canvas.Top="250"/>
        <Rectangle x:Name="apple" Width="15" Height="15" Fill="Red" Canvas.Left="200" Canvas.Top="200"/>
        <Label x:Name="scoretext" Content="0" Foreground="White"/>
    </Canvas>
</Window>
